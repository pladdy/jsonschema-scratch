{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://localhost:5000/schemas/weapon.json",

	"description": "A weapon used by a character or NPC.",
	"type": "object",
	"allOf": [
		{ "$ref": "http://localhost:5000/schemas/definitions.json#/definitions/item" },
		{
			"properties": {
				"type": {
					"description": "The kind of the weapon which corresponds to a mskill.",
					"type": "string",
					"enum": [
						"axe",
						"bow",
						"dagger",
						"exotic",
						"gun",
						"lance",
						"mace",
						"polearm",
						"sword"
					]
				}
			},
			"required": ["type"]
		}
	]
}
