{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {"type": "string"},
    "name": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "axe",
        "bow",
        "dagger",
        "exotic",
        "gun",
        "lance",
        "mace",
        "polearm",
        "sword",
      ]
    }
  },
  "required": ["name", "type"]
}
